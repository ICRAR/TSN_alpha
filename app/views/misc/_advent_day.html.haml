.row-fluid
  .span12.box{class: ('active' if current_day >= day), id: "day#{day}"}
    - if current_day >= day
      -if last_day >= day
        .row-fluid
          .span7.offset5
            %p= msg
        .row-fluid
          .span12
            - if local_assigns[:large].nil?
              = image_tag(image)
            -else
              %a.fancybox{:href=> large.html_safe,:rel=>"advent"}= image_tag(image, :class=>"media-object")

      -else
        .row-fluid
          .span12
            = link_to params.merge({:update_last_day => day}) do
              = image_tag("http://placehold.it/#{w}x#{h}&text=Open%20Now")
    - else
      .row-fluid
        .span12
          = image_tag("http://placehold.it/#{w}x#{h}&text=Coming%20Soon")
    .row-fluid
      .span4.no-height
        %h3= day
