- my_meta :title => "theSkyNet Challenges",
    :description => "short term challenges run by users of theSkyNet to compete for trophies"
- content_for(:title_bar) do
  #intro-sml-wrap
    %h1.fontface
      = link_to 'Challenges', challenges_path
      = ' \ '
      = link_to @challenger.challenge.name, @challenger.challenge
      = ' \ '
      = @challenger.name
  - @user_page =  'challenges'
  = render 'layouts/user_nav'
- content_for(:content) do
  #content-wrap
    .row-fluid
      .span5.well.well-white
        %h2= link_to @challenger.name, @challenger.entity
        %dl.dl-horizontal
          %dt Score
          %dd= @challenger.score
          %dt Rank
          %dd= @challenger.rank
    .well.well-white
      =@challenger.score_metric.to_json
