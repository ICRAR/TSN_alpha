- my_meta :title => "POGS Galaxy Requests",
    :description => "Manage your POGS galaxy Requests"

-content_for(:title_bar) do
  #intro-sml-wrap
    %h1.fontface Your Current HDF5 Requests
  -@user_page =  'science'
  =render 'layouts/user_nav'

-content_for(:content) do
  #content-wrap
    .well.well-white
      %h2
        = link_to "All Galaxies", galaxies_path
        \/  Your Current HDF5 Requests

      %p Click request on each for more information
      %table.table.table-striped
        %thead
          %tr
            %th ID
            %th State
            %th Created At
            %th Updated At

        %tbody

          - @requests.each do |hdf5_request|
            %tr
              %td= link_to hdf5_request.id, hdf5_request
              %td= link_to hdf5_request.current_state, hdf5_request
              %td= link_to hdf5_request.created_at, hdf5_request
              %td= link_to hdf5_request.updated_at, hdf5_request

      = paginate @requests
      = page_entries_info @requests, :entry_name => 'HDF5 Requests'