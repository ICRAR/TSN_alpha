- my_meta :title => @trophy.title,
    :description => "I earned '#{@trophy.title}' on theSkynet.org for playing my part in discovering our Universe!"
-content_for(:title_bar) do
  #intro-sml-wrap
    %h1.fontface= @trophy.title
  =  render 'layouts/user_nav'

-content_for(:content) do
  #content-wrap
    .shadowed
      .inner-boundary
        #content-inner
          - if @trophy.hidden?(@trophy_ids)
            .well
              %h3.text-error= t ".warning"
              %p.text-error
                %strong= t ".denied"
          %p= image_tag @trophy.image.url
          %p
            %strong= t ".belongs_to"
            = @set.name
          %p
            = @trophy.desc(@trophy_ids).html_safe
            -unless @trophy.credits.nil? || @trophy.credits == 0
              -case @trophy.set_type
              -when 'leader_board_position_active'
                ="(awarded for being in the top #{number_with_delimiter @trophy.show_credits(@trophy_ids)} people)"
              -when "RAC_active"
                ="(awarded for reaching an RAC of #{number_with_delimiter @trophy.show_credits(@trophy_ids)} or higher)"
              -else
                ="(awarded for achieving #{number_with_delimiter @trophy.show_credits(@trophy_ids)} credits)"

          %p
            = t".won_by"
            = @trophy.profiles_count
            = t(".user").pluralize(@trophy.profiles_count)
            = link_to "click here to see them all.", search_profiles_path(:trophy_id => @trophy.id)
          - if user_signed_in? && current_user.profile.has_trophy(@trophy)
            = render 'trophies/trophys_share', :trophy => @trophy