<%content_for(:title_home) do %>
    <div id="intro-home" style="cursor:pointer;" onclick="run(getQueryVariable('userID'))">
        <div id="intro-home-wrap" style="cursor:pointer;" onClick="run(getQueryVariable('userID'))">
            <h1 class="fontface">Play your part and help discover our Universe!</h1>
            <p>Have a computer? Want to help astronomers make awesome discoveries and understand our Universe? Then theSkyNet needs you!</p>



        </div>

        <span id="intro-img" onclick="run(getQueryVariable('userID'))">&nbsp;</span>

    </div>

    <span class="ribbon">

        <div id="ribbon-content">
            <%= link_to(new_user_session_path, :class => "signupbutton") do %>
                Sign up now
            <% end %>
            <p>
                <a href="#" onClick="run()">or click here run theSkyNet without having to register.</a>
            </p>
            <div id="ribbonsocial">
                <a href="http://www.facebook.com/pages/TheSkyNet/214061585306810"><%= image_tag('social_fb.png',:width =>32, :height => 32, :alt => "Become a Facebook Fan", :style=> 'margin-right:10px;')%></a>
                <a href="http://www.twitter.com/#!/_theSkyNet"><%= image_tag('social_tw.png',:width =>32, :height => 32, :alt => "Follow us on Twitter", :style=> 'margin-right:10px;')%></a>
            </div>

        </div>

    </span>
<% end %>

<%content_for(:content) do %>

    <div id="content-wrap-home">
        <%= @page.content.html_safe %>
    </div>

    <div id="content-wrap-news" xmlns="http://www.w3.org/1999/html">
        <% @news.each do |item| %>
            <%= render 'news/news_short', :item => item %>
        <% end %>
    </div>

    <div id="content-wrap-stats">
      <h2>Current Global Boinc Stats</h2>
      <div id="boinc_graphs"></div>

      <br/>
      <h2>Current Global Nereus Stats</h2>
      <div id="nereus_graphs"></div>

    </div>

<% end %>
