    <% if user_signed_in? %>
        <span class="navbar-text">Welcome back, <%= current_user.profile.name %></span>
        <span class="btn-toolbar">
            <div class="btn-group">
                <%= link_to("Logout", destroy_user_session_path, :class => "btn btn-tsn") %>
                <%= link_to "My Profile", my_profile_path, :class=>"btn btn-tsn" %>
                <button class="btn dropdown-toggle btn-tsn" data-toggle="dropdown">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><%= link_to("Edit registration", edit_user_registration_path) %></li>
                    <% if  current_user.profile.alliance %>
                        <li <%=  'class=active' if (@user_page == 'my_alliance') %>><%= link_to('My Alliance', current_user.profile.alliance)  %></li>
                    <% end %>
                    <li class="dropdown-submenu pull-left">
                        <a href="#"> Leaderboards</a>
                        <ul class="dropdown-menu">
                            <li <%=  'class=active' if (@user_page == 'leaderboard') %>><%= link_to('Individual', profiles_path)  %></li>
                            <li <%=  'class=active' if (@user_page == 'alliance_leaderboard') %>><%= link_to('Alliances', alliances_path)  %></li>
                        </ul>
                    </li>
                </ul>

            </div>
        </span>


    <% else %>
        <span class="navbar-text">You are not logged in</span>
        <span class="btn-toolbar">
            <div class="btn-group">
                <%= link_to('Register', new_user_registration_path, :class => "btn btn-tsn")%>
                <%= link_to('Login',new_user_session_path, :class => "btn btn-tsn")%>
            </div>
        </span>
    <% end %>
