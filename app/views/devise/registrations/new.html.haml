-content_for :title_bar do
  #intro-sml-wrap
    %h1.fontface= t "nav.sign_up"

-content_for :content do
  #content-wrap
    .well.well-white.telescopebg
      %h2= t "users.sign_up.header"
      %p= t "users.sign_up.msg"
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => 'form-horizontal' }) do |f|
        = devise_error_messages!
        = f.input :username, :autofocus => true, as: :string
        = f.input :email, :autofocus => true, as: :string
        = f.input :password, :autofocus => true, as: :string
        = f.input :password_confirmation, :autofocus => true, as: :string
        .controls
          = f.button :submit, t("nav.sign_up")
      = render "devise/shared/links"

