-id = "announcement-#{announcement.title.gsub(/\s+/, "-")}"
.alert.alert-block.alert-info.fade.in.announcement{:id => id, :data => {:id => announcement.id} }
  %h4.alert-heading= announcement.title
  .short= announcement.short
  .btn-group
    = link_to t("announcement.view"), announcement, :class => "btn btn-success announcement-view", id=> "#{id}-view"
    %button.btn.btn-info.announcement-hide{:id => "#{id}-hide"}= t "announcement.hide"
    %button.btn.btn-tsn-red.announcement-dismiss{:id => "#{id}-dismiss"}= t "announcement.dismiss"
