<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @profile.first_name %>
</p>

<p>
  <b>Second name:</b>
  <%= @profile.second_name %>
</p>

<p>
  <b>Country:</b>
  <%= @profile.country %>
</p>
<p>
  <b>Credit:</b>
  <%= @profile.general_stats_item.total_credit %>
</p>
<p>
  <b>Alliance:</b>
  <% if user_signed_in? && current_user.id == @profile.user_id %>
      <% if  @profile.alliance %>
        <%= link_to(@profile.alliance.name,@profile.alliance) %>  <%= (current_user.profile.alliance_leader) ? link_to('Manage', edit_alliance_path(@profile.alliance)) : link_to("Leave", leave_alliances_path) %>

<% else %>
      You are not part of an alliance yet click <%= link_to 'here', new_alliance_path %> to create one or here to find an existing alliance to join
      <% end %>
  <% else %>
    <%= @profile.alliance ? link_to(@profile.alliance.name,@profile.alliance) : 'Flying Solo' %>
  <% end %>
</p>

<p><b>Trophies</b>
    <% @profile.trophies.each do |trophy| %>
       <%= link_to (image_tag trophy.image.url), trophy %>
       <%= link_to trophy.title,  trophy %>
    <% end %>
</p>

<p><b>Boinc</b>
  <%
     boinc = @profile.general_stats_item.boinc_stats_item
     if boinc == nil
  %>
        <% if user_signed_in? && @profile == current_user.profile %>
          <p>Enter your POGS Boinc account details to sync your boinc account</p>
            <%= form_tag('/profile/update_boinc_id', :method => 'post') do %>
              <%= label_tag(:boinc_user, "Boinc User:") %>
              <%= text_field_tag(:boinc_user) %>    <br/>
              <%= label_tag(:boinc_password, "Boinc Password:") %>
              <%= password_field_tag(:boinc_password) %> <br/>
              <%= submit_tag("update") %>

            <% end %>
        <% else %>
            User not using boinc.
        <% end %>
  <% else %>
    <%= "credit = #{boinc.credit}" %>
      <br />
    <%= image_tag(boinc.render_credit_graph_url) %>
  <% end %>


</p>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
