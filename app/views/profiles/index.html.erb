<h1>Listing profiles</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Second name</th>
    <th>Country</th>
    <th>Rank</th>
    <th>Total Credit</th>
    <th>Alliance</th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.first_name %></td>
    <td><%= profile.second_name %></td>
    <td><%= profile.country %></td>
    <td><%= profile.rank %></td>
    <td><%= profile.credits %></td>
    <td><%= profile.alliance ? link_to(profile.alliance.name,profile.alliance) : 'Flying Solo' %></td>
    <td><%= link_to 'Show', profile %></td>
  </tr>
<% end %>
</table>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @profiles %>
  </div>
  <%= will_paginate @profiles, :container => false %>
</div>

<br />
