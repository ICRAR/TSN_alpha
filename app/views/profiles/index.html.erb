<h1>Listing profiles</h1>
<%= form_tag(search_profiles_path, :method => "get") do %>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("Search") %>
<% end %>
<table>
  <tr>
    <th>First name</th>
    <th>Second name</th>
    <th>Country</th>
    <th>Rank</th>
    <th>Total Credit</th>
    <th>Alliance</th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.first_name %></td>
    <td><%= profile.second_name %></td>
    <td><%= profile.country %></td>
    <td><%= profile.rank %></td>
    <td><%= profile.credits %></td>
    <td><%= profile.alliance ? link_to(profile.alliance.name,profile.alliance) : 'Flying Solo' %></td>
    <td><%= link_to 'Show', profile %></td>
  </tr>
<% end %>
</table>
<%= paginate @profiles %>
<%= page_entries_info @profiles %>

<br />
